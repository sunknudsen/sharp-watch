{
  "name": "sharp-watch",
  "version": "0.1.0-beta",
  "description": "Resize images in folder recursively using sharp.",
  "engines": {
    "node": ">=10.23.2"
  },
  "bin": {
    "sharp-watch": "./bin/sharp-watch.js"
  },
  "main": "build/index.js",
  "files": [
    "build/",
    "LICENCE",
    "README.md"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "commander": "^7.0.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^7.3.3",
    "readdirp": "^3.5.0",
    "sharp": "^0.27.1"
  },
  "scripts": {
    "start": "node build/index.js",
    "code": "tsc -w",
    "build": "rm -fr build/*; tsc",
    "ncu": "ncu -u"
  },
  "author": "Sun Knudsen <hello@sunknudsen.com>",
  "license": "MIT",
  "keywords": [
    "cli",
    "resize",
    "images",
    "sharp",
    "watch",
    "jpg",
    "png",
    "webp"
  ],
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.22",
    "@types/sharp": "^0.27.1",
    "npm-check-updates": "^11.1.1",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sunknudsen/sharp-watch.git"
  },
  "bugs": {
    "url": "https://github.com/sunknudsen/sharp-watch/issues"
  },
  "homepage": "https://github.com/sunknudsen/sharp-watch#readme",
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
