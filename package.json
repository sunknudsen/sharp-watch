{
  "name": "sharp-watch",
  "version": "0.0.6",
  "description": "Resize images in folder recursively using sharp.",
  "engines": {
    "node": ">=10.17.0"
  },
  "bin": {
    "sharp-watch": "./bin/sharp-watch.js"
  },
  "main": "build/index.js",
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.1",
    "commander": "^6.0.0",
    "fs-extra": "^9.0.1",
    "readdirp": "^3.4.0",
    "sharp": "^0.25.4"
  },
  "scripts": {
    "start": "node build/index.js",
    "code": "tsc -w",
    "build": "rm -fr build/*; tsc",
    "ncu": "ncu -u"
  },
  "author": "Sun Knudsen <hello@sunknudsen.com>",
  "license": "MIT",
  "keywords": [
    "cli",
    "resize",
    "images",
    "sharp",
    "watch",
    "jpg",
    "png"
  ],
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.24",
    "@types/sharp": "^0.25.1",
    "npm-check-updates": "^7.0.2",
    "typescript": "^3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sunknudsen/sharp-watch.git"
  },
  "bugs": {
    "url": "https://github.com/sunknudsen/sharp-watch/issues"
  },
  "homepage": "https://github.com/sunknudsen/sharp-watch#readme",
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
